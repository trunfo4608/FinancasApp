@* definindo a classe de modelo de dados desta página *@
@model FinancasApp.presentation.Models.AccountRegisterViewModel

@{
    //definindo o layout mestre desta página
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="row mt-2">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-body">
                <div class="text-center">
                    <h3>Criar conta de usuário.</h3>
                    <p>Preencha os campos para criar sua conta de acesso ao sistema.</p>
                </div>
                <hr />

                @using (Html.BeginForm())
                {
                    <div class="mb-2">
                        <label>Nome do usuário:</label>
                        @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
                        <div class="text-danger">
                            @Html.ValidationMessageFor(model => model.Nome)
                        </div>
                    </div>

                    <div class="mb-2">
                        <label>Email de acesso:</label>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                        <div class="text-danger">
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>
                    </div>

                    <div class="mb-2">
                        <label>Senha de acesso:</label>
                        @Html.PasswordFor(model => model.Senha, new { @class = "form-control" })
                        <div class="text-danger">
                            @Html.ValidationMessageFor(model => model.Senha)
                        </div>
                    </div>

                    <div class="mb-2">
                        <label>Confirme a sua senha:</label>
                        @Html.PasswordFor(model => model.SenhaConfirmacao, new { @class = "form-control" })
                        <div class="text-danger">
                            @Html.ValidationMessageFor(model => model.SenhaConfirmacao)
                        </div>
                    </div>

                    <div class="mb-2 d-grid">
                        <input type="submit" class="btn btn-primary"
                               value="Realizar Cadastro" />
                    </div>

                    <div class="mb-2 d-grid">
                        <a href="/Account/Login" class="btn btn-light">
                            Já possui conta? <strong>Acesse aqui!</strong>
                        </a>
                    </div>

                }

            </div>
        </div>
    </div>
</div>

