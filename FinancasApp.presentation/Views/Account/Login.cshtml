@* Definindo o modelo de dados da páginas *@
@model FinancasApp.Presentation.Models.AccountLoginViewModel

@{
    //definindo o layout mestre desta página
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="row mt-5">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-body">
                <div class="text-center">
                    <h3>Acessar Sistema</h3>
                    <p>Entre com suas credenciais de acesso</p>
                </div>
                <hr />

                @using (Html.BeginForm())
                {
                    <div class="mb-2">
                        <label>Email de acesso:</label>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                        <div class="text-danger">
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>
                    </div>

                    <div class="mb-2">
                        <label>Senha de acesso:</label>
                        @Html.PasswordFor(model => model.Senha, new { @class = "form-control" })
                        <div class="text-danger">
                            @Html.ValidationMessageFor(model => model.Senha)
                        </div>
                    </div>

                    <div class="mb-2 text-end">
                        <a href="/Account/ForgotPassword">
                            Esqueci minha senha!
                        </a>
                    </div>

                    <div class="mb-2 d-grid">
                        <input type="submit" class="btn btn-primary"
                               value="Acessar Sistema" />
                    </div>

                    <div class="mb-2 d-grid">
                        <a href="/Account/Register" class="btn btn-light">
                            Não possui conta? <strong>Cadastre-se aqui!</strong>
                        </a>
                    </div>

                }

            </div>
        </div>
    </div>
</div>

